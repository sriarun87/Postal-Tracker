{
    "manifest_version": 2,

    "name": "POSTAL Tracker",
    "description": "Select carrier to track the package",
    "version": "1.0",

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    },

    "permissions": [
	 "activeTab"
	]
}